<div class="small-10 columns small-centered">
  <div class="row signup">
    <h1>Teacher Sign Up</h1>
    <%= form_for @teacher, :url => auth_teachers_path do |f| %>
      <label for="left-label" class="left"><%= f.label :first_name %> </label>
      <%= f.text_field :first_name %>
      <label for="left-label" class="left"><%= f.label :last_name %> </label>
      <%= f.text_field :last_name %>
      <label for="left-label" class="left"><%= f.label :username %> </label>
      <%= f.text_field :username %>
      <label for="left-label" class="left"><%= f.label :email %> </label>
      <%= f.text_field :email %>
      <label for="left-label" class="left"><%= f.label :security_question %> </label>
      <%= f.text_field :security_question %>
      <label for="left-label" class="left"><%= f.label :security_answer %> </label>
      <%= f.text_field :security_answer %>
      <label for="left-label" class="left"><%= f.label :password %> </label>
      <%= f.password_field :password %>
      <label for="left-label" class="left"><%= f.label :password_confirmation %> </label>
      <%= f.password_field :password_confirmation %>
      <%= f.submit "Sign Up", class: 'button' %>
    <% end %>
  </div>
</div>