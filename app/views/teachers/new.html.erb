<section>
<meta name="viewport" content="width=device-width, user-scalable=no">

  <div class="small-10 columns small-centered">
    <div class="row signup">
      <div class="medium-12 columns">
        <h1>Teacher Sign Up</h1>
        <% if @errors %>
        <p>Please correct the following errors:</p>
        <ul class="no-bullet">
          <% @errors.each do |error| %>
          <li style="color:red"><%= error %>
          <% end %>
        </ul>
        <% end %>
      </div>
    </div>

    <%= form_for @teacher, :url => auth_teachers_path do |f| %>

    <div class="row">
      <div class="medium-2 columns">
        <label for="left-label" class="left"><%= f.label :title %> </label>
        <%= f.text_field :title %>
      </div>
      <div class="medium-5 columns">
        <label for="left-label" class="left"><%= f.label :first_name %> </label>
        <%= f.text_field :first_name %>
      </div>
      <div class="medium-5 columns">
        <label for="left-label" class="left"><%= f.label :last_name %> </label>
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <label for="left-label" class="left"><%= f.label :email %> </label>
        <%= f.text_field :email %>
      </div>
    </div>
     
    <div class="row">
      <div class="medium-6 columns">
        <label for="left-label" class="left"><%= f.label :password %> </label>
        <%= f.password_field :password %>
      </div>
      <div class="medium-6 columns">
        <label for="left-label" class="left"><%= f.label :password_confirmation %> </label>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="row">
      <div class="medium-12 columns">
        <%= f.submit "Sign Up", class: 'button' %>
      </div>
    </div>

    <% end %>
  </div>
</section>